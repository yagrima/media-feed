# Database Configuration
DATABASE_URL=postgresql://mefeed_user:CHANGE_THIS_PASSWORD@localhost:5432/mefeed
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@localhost:6379

# Security - CRITICAL: Generate strong keys before deployment
JWT_PRIVATE_KEY_PATH=./secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=./secrets/jwt_public.pem
ENCRYPTION_KEY_PATH=./secrets/encryption.key
SECRET_KEY=GENERATE_32_PLUS_CHARACTER_RANDOM_STRING_HERE

# CORS & Allowed Hosts
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
LOGIN_RATE_LIMIT=10/minute
IMPORT_RATE_LIMIT=5/hour

# API Keys (Will be encrypted)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=your_rapidapi_host_here
API_KEY_ROTATION_DAYS=90

# Job Scheduling
MEDIA_UPDATE_INTERVAL=weekly
MONITORING_SCHEDULE=daily
NOTIFICATION_BATCH_SIZE=50

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
FROM_EMAIL=noreply@mefeed.com

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=5

# Feature Flags
ENABLE_2FA=false
ENABLE_EMAIL_VERIFICATION=true
ENFORCE_HTTPS=true
MATCHING_STRATEGY=exact

# Application
APP_NAME=Me Feed
APP_VERSION=1.1.0
DEBUG=false
