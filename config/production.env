# Production Environment - Optimized Settings
# DO NOT COMMIT TO VERSION CONTROL

# Database - Maximum Performance
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_PRE_PING=true

# Redis - Production Settings
REDIS_CONNECTION_POOL_SIZE=50
REDIS_CONNECTION_POOL_MAX_IDLE=20
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_MAX_CONNECTIONS=100

# Security - Strict Production Settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# Rate Limiting - Conservative Production Limits
API_RATE_LIMIT=100/minute
AUTH_RATE_LIMIT=10/minute
UPLOAD_RATE_LIMIT=5/minute
SEARCH_RATE_LIMIT=200/minute

# Monitoring & Observability
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Logging - Production Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_STRUCTURED=true
LOG_REQUESTS=true
LOG_PERFORMANCE=true
LOG_SECURITY_EVENTS=true
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=100

# Performance Optimizations
ENABLE_GZIP=true
ENABLE_CACHING=true
CACHE_TIMEOUT=300
STATIC_CACHE_TIMEOUT=86400
ASYNC_WORKERS=4

# Frontend Optimizations
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production
ANALYZE=false

# External Service Timeouts
API_TIMEOUT_SECONDS=30
SMTP_TIMEOUT_SECONDS=10
TMDB_API_TIMEOUT=15
RAPIDAPI_TIMEOUT=15

# Backup Settings
ENABLE_AUTOMATIC_BACKUPS=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Email - Production Email Settings
EMAIL_BATCH_SIZE=50
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5
EMAIL_DELIVERY_TIMEOUT=10

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_CSV_ROWS=10000
UPLOAD_TIMEOUT=300

# Feature Flags - Production Ready
ENABLE_REGISTRATIONS=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Security Headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENFORCED=true
SECURITY_XFRAME_OPTIONS=DENY
SECURITY_XCONTENT_TYPE_OPTIONS=nosniff

# Database Connection Health
DB_HEALTH_CHECK_TIMEOUT=5
DB_CONNECTION_ATTEMPTS=3
DB_SLOW_QUERY_THRESHOLD=1000

# Caching Strategy
CACHE_STRATEGY=write-through
CACHE_DEFAULT_TTL=300
CACHE_USER_DATA_TTL=600
CACHE_MEDIA_DATA_TTL=3600
CACHE_ANALYTICS_TTL=1800
